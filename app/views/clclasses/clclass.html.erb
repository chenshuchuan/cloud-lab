<!--<h2><%= t("clclass.summary") %></h2>-->
<div class="row-fluid">
	<div class="span12">
		<div class="well">
			<div class="row-fluid">
				<div class="span10">
					<table>
						<tr>
							<% if @teacher.avatar? %>
							  <td><%= image_tag(@teacher.avatar_url(:small_thumb)) %></td>
							<% else %>
							  <td><%= image_tag("small_default.png") %></td>
							<% end %>
						</tr>
						<tr>
							<td><i class="icon-user"></i><b><%= t("clclass.teacher")%>:</b><strong><%= link_to @teacher.first_name+@teacher.last_name, @teacher %>
							<br />
							</strong><i class="icon-th-list"></i><b><%= t('teachers.resume') %></b>:
							<%= raw @teacher.resume %> </td>
						</tr>
					</table>
					<hr />
					<div class="well well-small">
						<p>
							<i class="icon-star"></i>
							<b><%= t("course.description") %>:</b>
							<%= raw @clclass.class_description%>
						</p>
					</div>
					<hr />
					<div class="well well-small">
						<p>
							<i class="icon-star"></i>
							<b><%= t("clclass.technical_requirements")%>:</b>
							<%= raw @clclass.technical_requirements %>
						</p>
					</div>
					<hr />
				</div>
				<!--end of well left-->
				<div class="">
					<div class="span2">
						<div class="well">
							<p>
								<b><%= t("clclass.students")%>:
								<br/>
								</b>
								<%@users.each do |u|%>
								<table>
									<% if u.avatar? %>
									<tr>
										<td><%= image_tag(u.avatar_url(:small_thumb)) %></td>
									</tr>
									<% else %>
									<tr>
										<td><%= image_tag("small_default.png") %></td>
									</tr>
									<% end %>	
									<tr>
										<td><%= link_to (u.first_name+u.last_name),u %></td>
									</tr>
								</table>
								<% end%>
							</p>
						</div>
					</div>
				</div>
			</div><!--end of row-fluid-->
			<hr />
			<h2><%= link_to t('clclass.list_all'), :clclasses, class: "btn btn-inverse" %></div></h2>
		</div>
	</div>
</div>