<%= form_for(@clclass) do |f| %>

  <div class="field">
    <%= t("course.full_name")%>:<br />
    <% if @clclass.course_id %>
  	<%= select_tag 'clclass[course_id]', options_from_collection_for_select(@courses, :id, :name, @clclass.course_id), :disabled=>true %>
    <% else %>
  	<%= select_tag 'clclass[course_id]', options_from_collection_for_select(@courses, :id, :name) %>
    <% end %>
  </div>
  <div class="field">
    <%= t('clclass.teacher') %>:<br />
  	<%= select_tag 'clclass[teacher]', options_from_collection_for_select(@teachers, :id, :first_name) %>
  </div>
  <div class="field">
    <%= t("clclass.start_date")%>:<br />
    <%= f.date_select :starting_date, :use_short_month => true  %>
  </div>
  <br />
  <div class="field">
    <%= t("course.description")%>:<br />
    <%= f.cktext_area :class_description %>
  </div>
  <div class="field">
    <%= t("clclass.technical_requirements")%>:<br />
    <%= f.cktext_area :technical_requirements %>
  </div>
  
  <div class="actions">
  <%= f.submit t("clclass.save"), class: "btn btn-large btn-primary" %>
  </div>
<% end %>
