<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= t('users.email') %>
      <%= f.text_field :email %>

      <%= t('password') %>
      <%= f.password_field :password %>

      <%= f.submit t("Sign_in"), class: "btn btn-large btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign_up", signup_path %></p>
  </div>
</div>