<header class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<%= link_to t('cloudlab'), root_path, id: "logo" %>
			<nav>
				<ul class="nav pull-left">
					<li>
						<%= link_to t('home'), root_path %>
					</li>
					<li>
						<%= link_to t('news'), news_path %>
					</li>
				</ul>
				<ul class="nav pull-right">
					<!--Google站内搜索开始-->
					<form method=get action="http://www.google.com/search" target=_blank class="navbar-search">
						<input type=text name=q class="search-query" placeholder="Google Search">
						<input type=hidden name=ie value=GB2312>
						<input type=hidden name=oe value=GB2312>
						<input type=hidden name=hl value=zh-CN>
						<!--
						<input type=hidden name=domains value="www.diandiyun.org">
                        <input type=hidden name=sitesearch value="www.diandiyun.org">
                       -->
					</form>
					<!--Google站内搜索结束-->
					<% if is_admin? %>
					<li>
						<%= link_to t('sysadmin.name'), sysadmin_path %>
					</li>
					<% end %>
					<% if signed_in?  %>
					<li id="fat-menu" class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown"> <%= current_user.first_name+current_user.last_name%> <b class="caret"></b> </a>
						<ul class="dropdown-menu">
							<%if is_student? %>
							<li>
								<%= link_to t('profile'), current_user %>
							</li>
							<li class="divider"></li>
							<li>
								<%= link_to t('my_classes'), myclasses_user_path(current_user) %>
							</li>
							<li>
								<%= link_to t('conversations'), :conversations %>
							</li>
							<li>
								<%= link_to t('setting'), edit_user_path(current_user) %>
							</li>
							<% end%>
							<%if is_teacher? %>
							<li>
								<%= link_to t('profile'), teacher_root_path %>
							</li>
							<li class="divider"></li>
							<li>
								<%= link_to t('teachers.teachers'), teachers_path %>
							</li>
							<li>
								<%= link_to t('conversations'), '#' %>
							</li>
							<li>
								<%= link_to t('setting'), edit_teacher_path(current_user) %>
							</li>
							<% end%>
							<li class="divider"></li>
							<li>
								<%= link_to t('sign_out'), signout_path, method: "delete" %>
							</li>
						</ul>
					</li>
					<% else %>
					<li id="fat-menu" class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown"> <%= t('sign_in') %> <b class="caret"></b> </a>
						<ul class="dropdown-menu">
							<li>
								<%= link_to t('sign_in_teacher'), teacher_signin_path %>
							</li>
							<li>
								<%= link_to t('users.sign_in_user'), signin_path %>
							</li>
						</ul>
					</li>
					<% end %>
				</ul>
			</nav>
		</div>
	</div>
</header>