<% provide(:title, 'Search users') %>
<hr />
<div class="row-fluid">
	<div class="span12">
		<div class="">
			<div class="row-fluid">
				<div class="span3">
					<div class="well-small" style="background-color: lavender;">
						<h2><%= t('users.search_student')%></h2>
						<%= form_tag search_user_user_path, :method => 'get' do %>
						<p>
							<b><%= t('users.search_by_username')%>:</b>
							<%= search_field_tag :search, params[:search], size: 20, placeholder: 'username'%>

							<b><%= t('users.search_by_gender')%>:</b>
							<%= search_field_tag :gender, params[:gender], size: 20, placeholder: 'gender' %>

							<b><%= t('users.search_by_city')%>:</b>
							<%= search_field_tag :city, params[:city], size: 20, placeholder: 'city' %>

							<b><%= t('users.search_by_education')%>:</b>
							<%= search_field_tag :education, params[:education], size: 20, placeholder: 'education' %>

							<b><%= t('users.search_by_email')%>:</b>
							<%= search_field_tag :email, params[:email], size: 20, placeholder: 'email' %>

							<%= submit_tag t("search") , class: "btn btn-inverse"%>
							<%= submit_tag t('reset'), type: :reset, class: 'btn btn-danger' %>

						</p>
						<% end %>
					</div>
				</div>

				<div class="row-fluid">
					<div class="span9">
						<div class="well-small" style="background-color: lavender;">
							<h2><%= t('users.list')%></h2>
							<table class="table table-hover">
								<tr>
									<th><%= t('users.avatar')%></th>
									<th><%= t('users.username')%></th>
									<th><%= t('users.gender')%></th>
									<th><%= t('users.city')%></th>
									<th><%= t('users.age')%></th>
									<th><%= t('users.education') %></th>
									<th><%= t('users.email')%></th>
								</tr>
								<% @users.each do |user| %>
								<tr>
									<% if user.avatar? %>
									<td><%= link_to image_tag(user.avatar_url(:small_thumb)), user %></td>
									<% else %>
									<td><%= link_to image_tag("small_default.png"), user %></td>
									<% end %>
									<td><%= link_to (user.first_name+user.last_name), user %></td>
									<td><%= user.gender %></td>
									<td><%= user.city %></td>
									<td><%= user.age %></td>
									<td><%= user.education%></td>
									<td><%= user.email %></td>
								</tr>
								<% end %>
							</table>
							<hr>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>